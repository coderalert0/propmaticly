<div>
  <div class="py-lg-8">
    <h2><%= @building&.name %> Upcoming Inspections (<%= @inspections.try(:total_count) %>)</h2>
  </div>
  <div class="card">
    <div class="d-flex border-0 p-6">
      <div class="me-auto">
        <%= form_with method: :get, local: true do %>
          <div class="d-flex">
            <div class="col-lg-7 me-2">
              <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control me-2" %>
            </div>
            <div class="col-lg-4 me-2">
              <%= select_tag :state, options_for_select(InspectionDecorator.states_select, params[:state]), class: "form-select me-2" %>
            </div>
            <div class="col-lg-2">
              <%= submit_tag "Filter", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <table class="table align-middle table-row-dashed gy-3">
        <thead>
        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
          <th>Inspection</th>
          <th>Device ID:</th>
          <th>Description</th>
          <th>Filing Date</th>
          <th>Due Date</th>
          <th>Attachments</th>
          <th>Status</th>
        </tr>
        </thead>

        <tbody>
        <% @inspections.each do |inspection| %>
          <tr>
            <td><%= inspection&.inspection_rule.decorate.compliance_item_humanize %></td>
            <td><%= inspection&.device_id %></td>
            <td><%= inspection&.inspection_rule.description %></td>
            <td><%= inspection.filing_date&.strftime("%D") %></td>
            <td><%= inspection&.due_date&.strftime("%D") %></td>
            <td><% inspection&.attachments.each do |attachment| %>
              <a href="<%= url_for(attachment) %>" download title="<%= attachment.filename.to_s %>">
                <i class="<%= file_icon_class(attachment) %>"></i>
              </a>
            <% end %></td>
            <td><%= inspection.state %></td>
            <td>
              <div class="dropdown">
                <div class="btn btn-sm btn-light dropdown-toggle">
                  Actions
                </div>
                <div class="dropdown-menu">
                  <% if can?(:read, inspection.object) %>
                    <div class="dropdown-item">
                      <%= link_to 'View Details', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#inspectionModal#{inspection.id}" } %>
                    </div>
                  <% end %>
                  <% if can?(:edit, inspection.object) %>
                    <div class="dropdown-item">
                      <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{inspection.id}" } %>
                    </div>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
          <%= render 'edit', inspection: inspection %>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @inspections, theme: 'bootstrap4' %>
      </div>
    </div>
  </div>
  <% @inspections.each do |inspection| %>
    <div class="modal fade" id="inspectionModal<%= inspection.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="fw-bold"><%= inspection.inspection_rule.decorate.compliance_item_humanize %> Inspection Details</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
            <div class="row">
              <!-- First Column: Inspection Details -->
              <div class="col-md-6">
                <h5>Details</h5>
                <% if inspection.device_id.present? %>
                  <p><strong>Device ID:</strong> <%= inspection.device_id %></p>
                <% end %>
                <p><strong>Description:</strong> <%= inspection.inspection_rule.description %></p>
                <p><strong>Filing Date:</strong> <%= inspection.filing_date&.strftime("%D") %></p>
                <p><strong>Due Date:</strong> <%= inspection.due_date&.strftime("%D") %></p>
                <p><strong>Status:</strong> <%= inspection.state %></p>
              </div>
              <!-- Second Column: Audit Logs -->
              <div class="col-md-6">
                <h5>Attachments</h5>
                <ul class="list-group">
                  <% inspection.attachments.each do |attachment| %>
                      <li>
                        <%= link_to attachment.filename.to_s, rails_blob_path(attachment, disposition: 'attachment'), target: '_blank' %>
                        <% if can?(:destroy, attachment) %>
                          <%= link_to '#', data: { controller: 'modal', action: 'modal#open', bs_target: "#deleteModal#{attachment.id}" } do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      </li>
                    <% end %>
                    <%= render 'attachments/delete', attachment: attachment %>
                  <% end %>
                </ul>
              </div>
            </div>
            <% if inspection.audits.any? { |audit| audit.comment.present? } %>
              <div class="row">
                <hr>
                <div class="col-lg-12">
                  <h5>Comments</h5>
                    <% inspection.audits.includes(:user).each do |audit| %>
                      <div>
                        <% if audit.comment.present? %>
                          <i><%= "#{audit.user.first_name}:" %></i> <%= audit.comment %>
                          <span class="text-muted">(<%= time_ago_in_words(audit.created_at) %> ago)</span>
                        <% end %>
                      </div>
                    <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
