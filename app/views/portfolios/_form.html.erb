<!--begin::Card body-->
<div class="card-body">
  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4 required">Name</label>
    <div class="col-lg-8">
      <%= f.text_field :name, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: 'Billionaires Row' %>
    </div>
  </div>
  <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Description</label>
    <div class="col-lg-8">
      <%= f.text_area :description, rows: 4, class: 'form-control form-control-lg form-control-solid', placeholder: '57th Street between Columbus Circle and Park Avenue' %>
    </div>
  </div>
  <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Contacts</label>
    <div class="col-lg-8">
      <%= f.select(:user_ids, @users.pluck(:email, :id), {}, { multiple: true, data: { controller: 'slim' }, class: 'form-select' }) %>
    </div>
  </div>
  <!--end::Input group-->
</div>
<!--end::Card body-->

<!--begin::Actions-->
<div class="card-footer d-flex justify-content-end py-6 px-9">
  <%= link_to 'Cancel', '#', data: { controller: 'modal', action: 'modal#close' }, class: 'btn btn-light btn-active-light-light me-2' %>
  <%= f.submit 'Save', class: "btn btn-success" %>
</div>
<!--end::Actions-->
