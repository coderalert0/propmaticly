<div data-controller="modal">
  <%= turbo_frame_tag "modal" do %>
    <div class="turbo-modal w-1000px">
      <%= form_for(@user, url: user_path(@user), method: :patch, data: { turbo: false }) do |f| %>
        <!--begin::Card body-->
        <div class="card-body p-9">
          <%= render "devise/shared/error_messages", resource: resource %>

          <!--begin::Input group-->
          <div class="row mb-8">
            <!--begin::Label-->
            <%= f.label :first_name, class: 'col-lg-2 col-form-label fs-6 required' %>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-4 fv-row">
              <%= f.text_field :first_name, class: 'form-control form-control-lg form-control-solid' %>
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-lg-4 fv-row">
              Buildings
              <%= f.collection_check_boxes :building_ids, @buildings, :id, :name do |b| %>
                <div><%= b.check_box %><%= b.label { b.text } %></div>
              <% end %>
            </div>
            <!--end::Col-->
          </div>
          <!--end::Input group-->

          <!--begin::Input group-->
          <div class="row mb-6">
            <!--begin::Label-->
            <%= f.label :last_name, class: 'col-lg-2 col-form-label fs-6 required' %>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-4 fv-row">
              <%= f.text_field :last_name, class: 'form-control form-control-lg form-control-solid' %>
            </div>
            <!--end::Col-->
          </div>
          <!--end::Input group-->

          <!--begin::Input group-->
          <div class="row mb-6">
            <!--begin::Label-->
            <%= f.label(:sms, 'SMS', class: 'col-lg-2 col-form-label fs-6') %>
            <!--end::Label-->
            <!--begin::Col-->
            <div class="col-lg-4 fv-row">
              <%= f.text_field :sms, class: 'form-control form-control-lg form-control-solid' %>
            </div>
            <!--end::Col-->
          </div>
          <!--end::Input group-->
        </div>
        <!--end::Card body-->
        <!--begin::Actions-->
        <div class="card-footer d-flex justify-content-end py-6 px-9">
          <%= link_to 'Cancel', '#', data: { controller: 'modal', action: 'modal#close' }, class: 'btn btn-light btn-active-light-primary me-2' %>
          <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
        <!--end::Actions-->
      <% end %>
    </div>
  <% end %>
</div>