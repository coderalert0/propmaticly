<div>
  <div class="py-lg-8">
    <h2>Users</h2>
  </div>

  <div class="card">
    <div class="card-header border-0 pt-6 d-flex">
      <div class="card-toolbar">
        <%= link_to 'Invite User', '#', class: 'btn btn-success', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
      </div>
    </div>

    <div class="card-body">
      <div>
        <table class="table align-middle table-row-dashed gy-3">
          <thead>
          <tr class="text-start text-muted fw-bold fs-7 text-uppercase">
            <th>Name</th>
            <th class="d-none d-md-table-cell">Email Address</th>
            <th>SMS</th>
            <th>Portfolios</th>
            <th>Buildings</th>
            <th>Accepted Invite</th>
            <th class="d-none d-md-table-cell">Admin</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %> <%= user.last_name %></td>
              <td class="d-none d-md-table-cell"><%= user.email %></td>
              <td><%= user.sms %></td>
              <td><%= user.portfolios.map(&:name).join(', ') %></td>
              <td><%= user.buildings.map(&:name).join(', ') %></td>
              <td><%= user.confirmed? ? 'Yes' : 'No' %></td>
              <td class="d-none d-md-table-cell"><%= user.admin? ? 'Yes' : 'No' %></td>
              <td class="d-none d-md-table-cell text-end">
                <div class="dropdown">
                  <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Actions
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to 'Edit', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{user.id}" } %>
                    </li>
                    <% unless current_user == user %>
                      <li>
                        <%= link_to 'Delete', '#', class: 'dropdown-item text-danger', data: { controller: 'modal', action: 'modal#open', bs_target: "#deleteModal#{user.id}" } %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </td>
            </tr>
            <%= render 'edit', user: user, buildings: @buildings %>
            <%= render 'delete', user: user %>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @users, theme: 'bootstrap4' %>
      </div>
      <%= render 'devise/invitations/new' %>
    </div>
  </div>
</div>
