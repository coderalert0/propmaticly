<!--begin::Wrapper-->
<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
  <!--begin::Wrapper container-->
  <div class="">
    <!--begin::Main-->
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
      <!--begin::Content wrapper-->
      <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar d-flex flex-stack py-4 py-lg-8">
          <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2 mb-n10" id="kt_toolbar">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
              <h1 class="page-heading text-dark fw-bold fs-3 my-0">Violations List</h1>
            </div>
          </div>
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
          <!--begin::Card-->
          <div class="card">
            <div class="card-header border-0 pt-6 d-flex justify-content-between">
              <div class="card-title">
                <!-- Search Placeholder -->
              </div>
              <div class="card-toolbar">
                <%= link_to 'Add Violation', '#', class: 'btn btn-primary', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
              </div>
            </div>
            <div class="card-body pt-0">
              <!--begin::Table-->
              <table class="table align-middle table-row-dashed gy-5" id="kt_customers_table">
                <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                  <th class="min-w-125px">Violation ID</th>
                  <th class="min-w-100px">Issue Date</th>
                  <th class="min-w-250px">Description</th>
                  <th class="min-w-100px">Status</th>
                  <th class="min-w-125px">Severity</th>
                  <th class="min-w-100px">Updated On</th>
                  <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @violations.each do |violation| %>
                  <tr>
                    <td>
                      <a href="#" data-bs-toggle="modal" data-bs-target="#violationModal<%= violation.id %>">
                        <div class="mb-1"><%= violation&.violation_id %></div>
                      </a>
                    </td>
                    <td><%= violation&.issue_date&.strftime("%D") %></td>
                    <td><%= violation&.description&.[](0..120) %></td>
                    <td><%= violation&.state %></td>
                    <td><%= violation&.severity %></td>
                    <td><%= violation.updated_at.strftime("%D") %></td>
                    <td class="text-end">
                      <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                        <i class="ki-outline ki-down fs-5 ms-1"></i></a>
                      <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 fs-7 w-125px py-4 menu-hover-primary" data-kt-menu="true">
                        <div class="menu-item px-3">
                          <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{violation.id}" } %>
                        </div>
                        <div class="menu-item px-3">
                          <%= link_to 'Delete', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#deleteModal#{violation.id}" } %>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <%= render 'edit', violation: violation %>
                  <%= render 'delete', violation: violation %>
                <% end %>
                </tbody>
              </table>
              <!--end::Table-->
              <div class="d-flex justify-content-center mt-4">
                <%= paginate @violations, theme: 'bootstrap4' %>
              </div>
              <%= render 'new' %>
            </div>
          </div>
          <!--end::Card-->
          <% @violations.each do |violation| %>
            <div class="modal fade" id="violationModal<%= violation.id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered mw-650px">
                <div class="modal-content">
                  <div class="modal-header">
                    <h2 class="fw-bold">Violation Details</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body py-10 px-lg-17">
                    <div>
                      <p><strong>Violation ID:</strong> <%= violation.violation_id %></p>
                      <p><strong>Description:</strong> <%= simple_format(violation.description) %></p>
                      <p><strong>Status:</strong> <%= violation.state %></p>
                      <p><strong>Type:</strong> <%= violation.violation_type %></p>
                      <p><strong>Issue Date:</strong> <%= violation.issue_date&.strftime("%D") %></p>
                      <p><strong>Severity:</strong> <%= violation.severity %></p>
                      <p><strong>Device Number:</strong> <%= violation.device_number %></p>
                      <p><strong>Device Type:</strong> <%= violation.device_type %></p>
                      <p><strong>Updated On:</strong> <%= violation.updated_at&.strftime("%D") %></p>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!--end::Content-->
      </div>
      <!--end::Content wrapper-->
    </div>
    <!--end:::Main-->
  </div>
  <!--end::Wrapper container-->
</div>
<!--end::Wrapper-->
