<div class="container my-5">
  <!-- Portfolio Heading -->
  <div class="py-lg-8">
    <h2><%= @portfolio.name %>: Buildings</h2>
  </div>

  <!-- Buildings Card -->
  <div class="card mb-4">
    <div class="card-header border-0 pt-6">
      <div class="d-flex justify-content-end">
        <% if can?(:create, Building.new(portfolio_id: @portfolio.id)) %>
          <%= link_to 'Add Building', '#', class: 'btn btn-success', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div>
        <table class="table align-middle table-row-dashed gy-3">
          <thead>
          <tr class="text-start text-muted fw-bold fs-7 text-uppercase">
            <th>Building Name</th>
            <th class="d-none d-md-table-cell">Address</th> <!-- Hide on small screens -->
            <th>Open Violations</th>
            <th>Open Complaints</th>
            <th>Upcoming Inspections</th>
            <th class="d-none d-md-table-cell">Past Inspections</th>
            <th></th> <!-- Hide on small screens -->
          </tr>
          </thead>
          <tbody class="text-gray-600">
          <% @buildings.each do |building| %>
            <tr>
              <td>
                <div class="text-gray-800 mb-1"><%= building.name %></div>
              </td>
              <td class="w-25 d-none d-md-table-cell"> <!-- Hide on small screens -->
                <div class="text-gray-600 mb-1">
                  <%= building.address1.titleize %>, <%= building.city.titleize %>, <%= building.state %>
                </div>
              </td>
              <td><%= building.open_violations_link %></td>
              <td><%= building.open_complaints_link %></td>
              <td><%= building.upcoming_inspections_link %></td>
              <td class="d-none d-md-table-cell"><%= building.past_inspections_link %></td>
              <td class="text-end d-none d-md-table-cell"> <!-- Hide on small screens -->
                <div class="dropdown">
                  <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Actions
                  </button>
                  <div class="dropdown-menu">
                    <%= link_to 'View Contacts', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#contactsModal#{building.id}" } %>
                    <% if can?(:edit, building.object) %>
                      <%= link_to 'Edit', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{building.id}" } %>
                    <% end %>
                    <% if can?(:destroy, building.object) && building.complaints.blank? && building.violations.blank? && building.inspections.blank? %>
                      <%= link_to 'Delete', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#deleteModal#{building.id}" } %>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
            <%= render 'edit', building: building %>
            <%= render 'delete', building: building %>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @buildings, theme: 'bootstrap4' %>
      </div>

      <%= render 'new' %>
    </div>
  </div>

  <!-- Modals for Contacts -->
  <% @buildings.each do |building| %>
    <div class="modal fade" id="contactsModal<%= building.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="fw-bold"><%= building.name %>: Contact Details</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <% building.users.each do |user| %>
                <div class="col-12 mb-3">
                  <div><strong><%= user.first_name %> <%= user.last_name %></strong></div>
                  <div><%= user.title %></div>
                  <div><%= user.sms %></div>
                  <div><%= user.email %></div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
