<!--begin::Wrapper-->
<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
  <!--begin::Wrapper container-->
  <div>
    <!--begin::Main-->
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
      <!--begin::Content wrapper-->
      <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar d-flex flex-stack py-4 py-lg-8">
          <!--begin::Toolbar wrapper-->
          <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2 mb-n10" id="kt_toolbar">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
              <!--begin::Title-->
              <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Buildings List</h1>
              <!--end::Title-->
            </div>
            <!--end::Page title-->
          </div>
          <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
          <!--begin::Card-->
          <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
              <!--begin::Card title-->
              <div class="card-title">
                <!--begin::Search-->
                <!--
                <div class="d-flex align-items-center position-relative my-1">
                  <i class="ki-outline ki-magnifier fs-3 position-absolute ms-5"></i>
                  <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Search Buildings" />
                </div>
                -->
                <!--end::Search-->
              </div>
              <!--begin::Card title-->
              <!--begin::Card toolbar-->
              <div class="card-toolbar">
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                  <!--begin::Add customer-->
                  <%= link_to 'Add Building', '#', class: 'btn btn-primary', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
                  <!--end::Add customer-->
                </div>
                <!--end::Toolbar-->
              </div>
              <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
              <!--begin::Table-->
              <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                  <th class="min-w-125px">Building Name</th>
                  <th class="min-w-125px">Portfolio</th>
                  <th class="min-w-125px">Address</th>
                  <th class="min-w-125px">Complaints</th>
                  <th class="min-w-125px">Violations</th>
                  <th class="min-w-125px">Contacts</th>
                </tr>
                </thead>
                <tbody class="text-gray-600">
                <% @buildings.each do |building| %>
                  <tr>
                    <td>
                      <div class="text-gray-800 mb-1"><%= building.name %></div>
                    </td>
                    <td><%= building.portfolio.name %></td>
                    <td>
                      <div href="#" class="text-gray-600 mb-1"><%= building.address1.titleize %>, <%= building.city.titleize %>, <%= building.state %></div>
                    </td>
                    <td><%= link_to building.complaints.size, building_complaints_path(building) %></td>
                    <td><%= link_to building.violations.size, violations_path(building_id: building.id) %></td>
                    <td class="text-end">
                      <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                        <i class="ki-outline ki-down fs-5 ms-1"></i></a>
                      <!--begin::Menu-->
                      <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 fs-7 w-125px py-4 menu-hover-primary" data-kt-menu="true">
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                          <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{building.id}" } %>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <% if building.complaints.blank? && building.violations.blank? %>
                          <div class="menu-item px-3">
                            <%= link_to 'Delete', '#', class: 'menu-link px-3', data: { bs_toggle: 'modal', bs_target: "#deleteModal#{building.id}" } %>
                          </div>
                        <% end %>
                        <!--end::Menu item-->
                      </div>
                      <!--end::Menu-->
                    </td>
                  </tr>

                  <!-- Render the Edit Modal Partial -->
                  <%= render 'edit', building: building %>
                  <!--end::Edit Modal-->

                  <!-- Render the Delete Modal Partial -->
                  <%= render 'delete', building: building %>
                  <!--end::Delete Confirmation Modal-->
                <% end %>
                </tbody>
              </table>
              <!--end::Table-->

              <!-- Render the New Modal Partial -->
              <%= render 'new' %>
              <!--end::New Modal-->
            </div>
            <!--end::Card body-->
          </div>
          <!--end::Card-->
        </div>
        <!--end::Content-->
      </div>
      <!--end::Content wrapper-->
    </div>
    <!--end:::Main-->
  </div>
  <!--end::Wrapper container-->
</div>
<!--end::Wrapper-->
