<!--begin::Wrapper-->
<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
  <!--begin::Wrapper container-->
  <div>
    <!--begin::Main-->
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
      <!--begin::Content wrapper-->
      <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar d-flex flex-stack py-4 py-lg-8">
          <!--begin::Toolbar wrapper-->
          <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2 mb-n10" id="kt_toolbar">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
              <!--begin::Title-->
              <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Buildings List</h1>
              <!--end::Title-->
            </div>
            <!--end::Page title-->
          </div>
          <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
          <!--begin::Card-->
          <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
              <!--begin::Card title-->
              <div class="card-title">
                <!--begin::Search-->
                <div class="d-flex align-items-center position-relative my-1">
                  <i class="ki-outline ki-magnifier fs-3 position-absolute ms-5"></i>
                  <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Search Buildings" />
                </div>
                <!--end::Search-->
              </div>
              <!--begin::Card title-->
              <!--begin::Card toolbar-->
              <div class="card-toolbar">
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                  <!--begin::Add customer-->
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_building">Add Building</button>
                  <!--end::Add customer-->
                </div>
                <!--end::Toolbar-->
                <!--begin::Group actions-->
                <div class="d-flex justify-content-end align-items-center d-none" data-kt-customer-table-toolbar="selected">
                  <div class="fw-bold me-5">
                    <span class="me-2" data-kt-customer-table-select="selected_count"></span>Selected</div>
                  <button type="button" class="btn btn-danger" data-kt-customer-table-select="delete_selected">Delete Selected</button>
                </div>
                <!--end::Group actions-->
              </div>
              <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
              <!--begin::Table-->
              <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                  <th class="min-w-125px">Building Name</th>
                  <th class="min-w-125px">Portfolio</th>
                  <th class="min-w-125px">Address</th>
                  <th class="min-w-125px">Email Address</th>
                  <th class="min-w-125px">SMS</th>
                </tr>
                </thead>
                <tbody class="fw-semibold text-gray-600">
                <% @buildings.each do |building| %>
                  <tr>
                    <td>
                      <div class="text-gray-800 mb-1"><%= building.name %></div>
                    </td>
                    <td><%= building.portfolio.name %></td>
                    <td>
                      <a href="#" class="text-gray-600 text-hover-primary mb-1"><%= building.address1.titleize %>, <%= building.city.titleize %>, <%= building.state %></a>
                    </td>
                    <td><%= building.email_address %></td>
                    <td><%= building.sms %></td>
                    <td class="text-end">
                      <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                        <i class="ki-outline ki-down fs-5 ms-1"></i></a>
                      <!--begin::Menu-->
                      <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                          <%= link_to 'Edit', '', { class: 'menu-link px-3', 'data-bs-toggle': "modal", 'data-bs-target': "#kt_modal_edit_building" } %>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                          <%= link_to 'Delete', '', { class: 'menu-link px-3', 'data-bs-toggle': "modal", 'data-bs-target': "#kt_modal_delete_building" } %>
                        </div>
                        <!--end::Menu item-->
                      </div>
                      <!--end::Menu-->
                    </td>
                  </tr>
                <% %>
                <% end %>
                </tbody>
              </table>
              <!--end::Table-->
            </div>
            <!--end::Card body-->
          </div>
          <!--end::Card-->
          <!--begin::Modals-->
          <!--begin::Modal - Buildings - Add-->
          <div class="modal fade" id="kt_modal_add_building" tabindex="-1" aria-hidden="true">
            <!--begin::Modal dialog-->
            <div class="modal-dialog modal-dialog-centered mw-650px">
              <!--begin::Modal content-->
              <div class="modal-content">
                <%= render template: 'buildings/new' %>
              </div>
            </div>
          </div>
          <!--end::Modal - Buildings - Add-->

          <!--begin::Modal - Buildings - Edit-->
          <div class="modal fade" id="kt_modal_edit_building" tabindex="-1" aria-hidden="true">
            <!--begin::Modal dialog-->
            <div class="modal-dialog modal-dialog-centered mw-650px">
              <!--begin::Modal content-->
              <div class="modal-content">
                <%= render template: 'buildings/new' %>
              </div>
            </div>
          </div>
          <!--end::Modal - Buildings - Edit-->

          <!--begin::Modal - Buildings - Delete-->
          <div class="modal fade" id="kt_modal_delete_building" tabindex="-1" aria-hidden="true">
            <!--begin::Modal dialog-->
            <div class="modal-dialog modal-dialog-centered mw-650px">
              <!--begin::Modal content-->
              <div class="modal-content">
                <%= render template: 'buildings/destroy' %>
              </div>
            </div>
          </div>
          <!--end::Modal - Buildings - Delete-->

          <!--end::Modal - New Card-->
          <!--end::Modals-->
        </div>
        <!--end::Content-->
      </div>
      <!--end::Content wrapper-->
    </div>
    <!--end:::Main-->
  </div>
  <!--end::Wrapper container-->
</div>
<!--end::Wrapper-->