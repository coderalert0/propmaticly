<!--begin::Card body-->
<div class="card-body">
  <!--begin::Input group row-->
  <div class="row">
    <!-- First Column -->
    <div class="col-lg-4">
      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-4 required">Name</label>
        <div class="col-lg-8">
          <%= f.text_field :name, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: 'Montefiore Residents' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-4 required">Number</label>
        <div class="col-lg-8">
          <%= f.text_field :number, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '3450' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-4 required">Street Name</label>
        <div class="col-lg-8">
          <%= f.text_field :street, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: 'Wayne Ave' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-4 required">Zip Code</label>
        <div class="col-lg-8">
          <%= f.text_field :zip5, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '10467' %>
        </div>
      </div>
      <!--end::Input group-->
    </div>
    <!-- End First Column -->

    <!-- Second Column -->
    <div class="col-lg-4">
      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Square Feet</label>
        <div class="col-lg-6">
          <%= f.number_field :square_feet, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '15,000' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Total Square Feet of All Buildings on Tax Lot</label>
        <div class="col-lg-6">
          <%= f.number_field :tax_lot_square_feet, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '75,000' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Number of Stories</label>
        <div class="col-lg-6">
          <%= f.number_field :number_of_stories, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '21' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Number of Residential Units</label>
        <div class="col-lg-6">
          <%= f.number_field :number_of_residential_units, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '130' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Boiler BTUs</label>
        <div class="col-lg-6">
          <%= f.number_field :boiler_btus, required: true, class: 'form-control form-control-lg form-control-solid', placeholder: '350,000' %>
        </div>
      </div>
      <!--end::Input group-->
    </div>
    <!-- End Second Column -->

    <!-- Third Column -->
    <div class="col-lg-4">
      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Elevator(s)?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_elevator, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Sprinkler System?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_sprinklers, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Standpipes?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_standpipe, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Gas Piping?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_gas_piping, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Backflow Device?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_backflow, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Cooling Tower?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_cooling_tower, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->

      <!--begin::Input group-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-8">Has Residential Units with Children Under Age of 10?</label>
        <div class="col-lg-4">
          <%= f.check_box :has_units_with_children_under_10, class: 'form-check-input' %>
        </div>
      </div>
      <!--end::Input group-->
    </div>
    <!-- End Third Column -->
  </div>
  <!--end::Input group row-->

  <%= f.hidden_field :portfolio_id, value: @portfolio&.id %>
</div>
<!--end::Card body-->

<!--begin::Actions-->
<div class="card-footer d-flex justify-content-end py-6 px-9">
  <%= link_to 'Cancel', '#', data: { controller: 'modal', action: 'modal#close' }, class: 'btn btn-light btn-active-light-light me-2' %>
  <%= f.submit 'Save', class: "btn btn-success" %>
</div>
<!--end::Actions-->
