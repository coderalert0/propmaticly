<div>
  <div>
    <div class="py-lg-8">
      <h2>Inspections List</h2>
    </div>

    <div class="card">
      <div class="card-header border-0 pt-6">
        <div class="card-toolbar">
          <%= link_to 'Add Inspection', '#', class: 'btn btn-success', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
        </div>
      </div>
      <div class="card-body">
        <table class="table align-middle table-row-dashed gy-3">
          <thead>
          <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
            <th class="min-w-125px">Inspection</th>
            <th class="min-w-125px">Building Name</th>
            <th class="min-w-125px">Date</th>
          </tr>
          </thead>
          <tbody class="text-gray-600">
          <% @inspections.each do |inspection| %>
            <tr>
              <td><%= inspection.inspection_rule.description %></td>
              <td><%= @building.name %></td>
              <td><%= inspection.date %></td>
              <td class="text-end">
                <div class="dropdown">
                  <div class="btn btn-sm btn-light dropdown-toggle">
                    Actions
                  </div>
                  <div class="dropdown-menu">
                    <div class="dropdown-item">
                      <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{inspection.id}" } %>
                    </div>
                    <div class="dropdown-item">
                      <%= link_to 'Delete', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#deleteModal#{inspection.id}" } %>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
            <%= render 'edit', inspection: inspection %>
            <%= render 'delete', inspection: inspection %>
          <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center mt-4">
          <%#= paginate @inspections, theme: 'bootstrap4' %>
        </div>
        <%= render 'new' %>
      </div>
    </div>
  </div>
</div>
