<div>
  <!-- Page Header -->
  <div class="py-lg-8">
    <h2><%= @building&.name %>: Past <%= @inspection_rule&.compliance_item_humanize %> Inspections (<%= @inspections.try(:total_count) %>)</h2>
  </div>

  <!-- Inspection Search & Add Button -->
  <div class="card">
    <div class="d-flex flex-wrap justify-content-between p-6">
      <div class="me-auto">
        <%= form_with url: building_inspection_rule_inspections_path(@building, @inspection_rule), method: :get, local: true do %>
          <div class="d-flex flex-wrap gap-2">
            <div class="search-container">
              <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
            </div>
            <div class="button-container">
              <%= submit_tag "Search", class: "btn btn-primary w-100" %>
            </div>
          </div>
        <% end %>
      </div>

      <% if can?(:create, Inspection.new(inspection_rule_id: @inspection_rule.id)) %>
        <%= link_to 'Add Inspection', '#', class: 'btn btn-success' , data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
      <% end %>
    </div>

    <!-- Inspections Table -->
    <div class="card-body">
      <div>
        <table class="table align-middle table-row-dashed gy-3">
          <%= @inspection_rule.header_html %>
          <tbody>
          <% @inspections.each do |inspection| %>
            <tr>
              <% if inspection.data.present? %>
                <% @inspection_rule.headers.each do |attribute| %>
                  <td><%= inspection.data_value(attribute) %></td>
                <% end %>
              <% else %>
                <td><%= inspection.device_id %></td>
                <% (@inspection_rule.headers.size - 2).times do %>
                  <td></td>
                <% end %>
                <td><%= inspection.filing_date&.strftime('%D') %></td>
            <% end %>
              <td class="d-none d-md-table-cell">
                <div class="dropdown">
                  <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <div class="dropdown-menu">
                    <% if can?(:read, inspection.object) %>
                      <li><%= link_to 'View Details', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#inspectionModal-#{inspection.id}" } %></li>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @inspections, theme: 'bootstrap4' %>
      </div>
      <%= render 'new' %>
    </div>
  </div>

  <!-- Modals for Inspection Details -->
  <% @inspections.each do |inspection| %>
    <div class="modal fade" id="inspectionModal-<%= inspection.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="fw-bold"><%= inspection.inspection_rule.decorate.compliance_item_humanize %> Inspection Details</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <% if inspection.data.present? %>
                <% inspection.data.keys.sort.each_slice(10) do |chunk| %>
                  <div class="col-md-6">
                    <% chunk.each do |key| %>
                      <p><strong><%= key.titleize %>: </strong><%= inspection.data[key] %></p>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="col-md-6">
                  <p><strong>Device ID: </strong><%= inspection.device_id %></p>
                  <p><strong>Filing Date: </strong><%= inspection.filing_date&.strftime('%D') %></p>
                </div>
              <% end %>
            </div>
            <p><strong>Updated On:</strong> <%= inspection&.updated_at&.strftime("%D") %></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
