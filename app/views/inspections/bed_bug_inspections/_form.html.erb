<!--begin::Card body-->
<div class="card-body p-9">
  <div class="row">
    <!--begin::First Column - Non-date fields-->
    <div class="col-lg-6">
      <!--begin::Input group 1-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6 required">Registration ID</label>
        <div class="col-lg-6">
          <%= f.text_field :registration_id, required: true, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 1-->

      <!--begin::Input group 2-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Total Dwelling Unit Count</label>
        <div class="col-lg-6">
          <%= f.number_field :of_dwelling_units, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 2-->

      <!--begin::Input group 3-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Infested Dwelling Unit Count</label>
        <div class="col-lg-6">
          <%= f.number_field :infested_dwelling_unit_count, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 3-->

      <!--begin::Input group 4-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Eradicated Unit Count</label>
        <div class="col-lg-6">
          <%= f.number_field :eradicated_unit_count, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 4-->

      <!--begin::Input group 5-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Re-Infested Dwelling Unit</label>
        <div class="col-lg-6">
          <%= f.number_field :re_infested_dwelling_unit, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 5-->
    </div>
    <!--end::First Column-->

    <!--begin::Second Column - Date fields-->
    <div class="col-lg-6">
      <!--begin::Input group 1-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Filing Date</label>
        <div class="col-lg-6">
          <%= f.date_field :filing_date, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 1-->

      <!--begin::Input group 2-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Filing Period Start Date</label>
        <div class="col-lg-6">
          <%= f.date_field :filing_period_start_date, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 2-->

      <!--begin::Input group 3-->
      <div class="row mb-6 align-items-center">
        <label class="col-lg-6">Filing Period End Date</label>
        <div class="col-lg-6">
          <%= f.date_field :filling_period_end_date, class: 'form-control form-control-lg form-control-solid' %>
        </div>
      </div>
      <!--end::Input group 3-->
    </div>
    <!--end::Second Column-->
  </div>

  <%= f.hidden_field :building_id, value: @building&.id %>
</div>
<!--end::Card body-->

<!--begin::Actions-->
<div class="card-footer d-flex justify-content-end py-6 px-9">
  <%= link_to 'Cancel', '#', data: { controller: 'modal', action: 'modal#close' }, class: 'btn btn-light btn-active-light-light me-2' %>
  <%= f.submit 'Save', class: "btn btn-success" %>
</div>
<!--end::Actions-->
