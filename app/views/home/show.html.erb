        <!--begin::Statistics-->
        <div class="m-0">
          <!--begin::Heading-->
          <div class="d-flex align-items-center mb-2">
            <!--begin::Title-->
            <i class="las la-check fs-3hx me-4 text-success"></i>
            <span class="fs-2hx fw-bold text-gray-800 me-2 ls-n2"><%= current_user.organization.complaints.closed.size %></span>
            <!--end::Title-->
