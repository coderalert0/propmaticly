<!--begin::Wrapper-->
<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
  <!--begin::Wrapper container-->
  <div class="">
    <!--begin::Main-->
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
      <!--begin::Content wrapper-->
      <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar d-flex flex-stack py-4 py-lg-8">
          <!--begin::Toolbar wrapper-->
          <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2 mb-n10" id="kt_toolbar">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
              <!--begin::Title-->
              <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Portfolio List</h1>
              <!--end::Title-->
            </div>
            <!--end::Page title-->
          </div>
          <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
          <!--begin::Card-->
          <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
              <!--begin::Card title-->
              <div class="card-title">
                <!--begin::Search-->
                <!-- <div class="d-flex align-items-center position-relative my-1"> -->
                <!--   <i class="ki-outline ki-magnifier fs-3 position-absolute ms-5"></i> -->
                <!--   <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Search Portfolios" /> -->
                <!-- </div> -->
                <!--end::Search-->
              </div>
              <!--begin::Card title-->
              <!--begin::Card toolbar-->
              <div class="card-toolbar">
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                  <!--begin::Add portfolio-->
                  <%= link_to 'Add Portfolio', '#', class: 'btn btn-primary', data: { controller: 'modal', action: 'modal#open', bs_target: "#newModal" } %>
                  <!--end::Add portfolio-->
                </div>
                <!--end::Toolbar-->
              </div>
              <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
              <!--begin::Table-->
              <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                  <th class="min-w-125px">Portfolio Name</th>
                  <th class="min-w-125px">Active Complaints</th>
                  <th class="min-w-125px">Closed this Month</th>
                  <th class="min-w-125px">Number of Buildings</th>
                  <th class="min-w-125px">Contact</th>
                  <th class="min-w-125px">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @portfolios.each do |portfolio| %>
                  <tr>
                    <td><%= portfolio.name %></td>
                    <td>
                      <a href="#" class="text-hover-primary mb-1 fw-bold"><%= link_to portfolio.complaints.open.size, portfolio_complaints_path(portfolio, state: 'open') %></a>
                    </td>
                    <td>
                      <a href="#" class="text-hover-primary mb-1 fw-bold"><%= link_to portfolio.complaints.closed.size, portfolio_complaints_path(portfolio, state: 'closed') %></a>
                    </td>
                    <td><%= link_to portfolio.buildings.size, portfolio_buildings_path(portfolio), class: 'fw-bold' %></td>
                    <td>Joe Plumber</td>
                    <td class="text-end">
                      <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                        <i class="ki-outline ki-down fs-5 ms-1"></i></a>
                      <!--begin::Menu-->
                      <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 fs-7 w-125px py-4 menu-hover-primary" data-kt-menu="true">
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                          <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{portfolio.id}" } %>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <% if portfolio.buildings.blank? %>
                          <div class="menu-item px-3">
                            <%= link_to 'Delete', '#', class: 'menu-link px-3', data: { bs_toggle: 'modal', bs_target: "#deleteModal#{portfolio.id}" } %>
                          </div>
                        <% end %>
                        <!--end::Menu item-->
                      </div>
                      <!--end::Menu-->
                    </td>
                  </tr>
                  <!-- Render the Edit Modal Partial -->
                  <%= render 'portfolios/edit', portfolio: portfolio %>
                  <!--end::Edit Modal-->

                  <!-- Render the Delete Modal Partial -->
                  <%= render 'portfolios/delete', portfolio: portfolio %>
                  <!--end::Delete Confirmation Modal-->
                <% end %>
                </tbody>
              </table>
              <!--end::Table-->

              <!-- Render the New Modal Partial -->
              <%= render 'portfolios/new' %>
              <!--end::New Modal-->
            </div>
            <!--end::Card body-->
          </div>
          <!--end::Card-->
        </div>
        <!--end::Content-->
      </div>
    </div>
  </div>
</div>