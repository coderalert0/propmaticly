<!--begin::Card body-->
<div class="card-body">
  <%= render "devise/shared/error_messages", resource: resource %>
    <!--begin::Input group-->
    <div class="row mb-6 align-items-center">
      <label class="col-lg-4 required">First Name</label>
      <div class="col-lg-8">
        <%= f.text_field :first_name, required: true, class: 'form-control' %>
      </div>
    </div>
    <!--end::Input group-->

    <!--begin::Input group-->
    <div class="row mb-6 align-items-center">
      <label class="col-lg-4 required">Last Name</label>
      <div class="col-lg-8">
        <%= f.text_field :last_name, required: true, class: 'form-control' %>
      </div>
    </div>
    <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Title</label>
    <div class="col-lg-8">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <!--end::Input group-->

    <!--begin::Input group-->
    <div class="row mb-6 align-items-center">
      <label class="col-lg-4 required">Email</label>
      <div class="col-lg-8">
        <%= f.text_field :email, required: true, class: 'form-control' %>
      </div>
    </div>
    <!--end::Input group-->

    <!--begin::Input group-->
    <div class="row mb-6 align-items-center">
      <label class="col-lg-4">SMS</label>
      <div class="col-lg-8">
        <%= f.text_field :sms, class: 'form-control' %>
        <div class="form-text">Enter if you want to be alerted of new complaints, violations, or upcoming inspections</div>
      </div>
    </div>
    <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Permissioned Portfolios</label>
    <div class="col-lg-8">
      <%= f.select :portfolio_ids, @portfolios.pluck(:name, :id), {}, { multiple: true, data: { controller: 'slim' }, class: 'form-select' } %>
      <div class="text-muted">Permissions the user to the portfolio(s) and subscribes them to alerts</div><br />
    </div>
  </div>
  <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Permissioned Buildings</label>
    <div class="col-lg-8">
      <%= f.select :building_ids, grouped_options_for_select(@grouped_buildings), {}, { multiple: true, data: { controller: 'slim' }, class: 'form-select' } %>
      <div class="text-muted">Permissions the user to the building(s) and subscribes them to alerts</div><br />
    </div>
  </div>
  <!--end::Input group-->

  <!--begin::Input group-->
  <div class="row mb-6 align-items-center">
    <label class="col-lg-4">Admin</label>
    <div class="col-lg-8">
      <%= f.check_box :admin, class: 'form-check-input' %>
      <div class="form-text"><%= t(:set_admin_warning_message) %></div>
    </div>
  </div>
  <!--end::Input group-->
</div>
<!--end::Card body-->

<!--begin::Actions-->
<div class="card-footer d-flex justify-content-end py-6 px-9">
  <%= link_to 'Cancel', '#', data: { controller: 'modal', action: 'modal#close' }, class: 'btn btn-light btn-active-light-light me-2' %>
  <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-success' %>
</div>
<!--end::Actions-->
