<h2><%= t "devise.invitations.edit.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), method: :put) do |f| %>
  <div class="card-body border-top py-9">
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <% if f.object.class.require_password_on_accepting %>
      <div class="row mb-6">
        <%= f.label :password, class: 'col-lg-2 col-form-label required' %><br />
        <div class="col-lg-4 fv-row">
          <%= f.password_field :password, required: true, class: 'form-control form-control-lg' %>
        </div>
      </div>

      <div class="row mb-6">
          <%= f.label :password_confirmation, class: 'col-lg-2 col-form-label required' %><br />
          <div class="col-lg-4 fv-row">
            <%= f.password_field :password_confirmation, required: true, class: 'form-control form-control-lg' %>
          </div>
        </div>
      </div>
    <% end %>


    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
