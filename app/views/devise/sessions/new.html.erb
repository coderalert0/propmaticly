<h2 class="text-center mb-4">Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card p-4">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <div class="col-12 col-md-2">
        <%= f.label :email, class: 'col-form-label' %>
      </div>
      <div class="col-12 col-md-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12 col-md-2">
        <%= f.label :password, class: 'col-form-label' %>
      </div>
      <div class="col-12 col-md-10">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row mb-3 align-items-center">
        <div class="col-12 col-md-2">
          <%= f.label :remember_me, class: 'col-form-label' %>
        </div>
        <div class="col-12 col-md-10">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-12 text-center">
        <%= f.submit "Log in", class: 'btn btn-success btn-lg' %>
      </div>
    </div>
  </div>
<% end %>

<div class="mt-3 text-center">
  <%= render "devise/shared/links" %>
</div>
