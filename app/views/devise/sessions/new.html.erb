<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card-body border-top py-9">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row mb-6">
      <%= f.label :email, class: 'col-lg-2 col-form-label' %><br />
      <div class="col-lg-4 fv-row">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg form-control-solid' %>
      </div>
    </div>

    <div class="row mb-6">
      <%= f.label :password, class: 'col-lg-2 col-form-label' %><br />
      <div class="col-lg-4 fv-row">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg form-control-solid' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row mb-6">
        <%= f.label :remember_me, class: 'col-lg-2 col-form-label' %><br />
        <div class="col-lg-4 fv-row">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
