<h2>Change Your Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="card-body border-top py-9">
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row mb-6">
      <%= f.label :password, "New password", class: 'col-lg-2 col-form-label required' %><br />
      <div class="col-lg-4 fv-row">
        <%= f.password_field :password, required: true, class: 'form-control form-control-lg' %>
        <% if @minimum_password_length %>
          <div class="text-muted">(<%= @minimum_password_length %> characters minimum)</div><br />
        <% end %>
      </div>
    </div>

    <div class="row mb-6">
      <%= f.label :password_confirmation, "Confirm new password", class: 'col-lg-2 col-form-label required' %><br />
      <div class="col-lg-4 fv-row">
        <%= f.password_field :password_confirmation, required: true, class: 'form-control form-control-lg' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
