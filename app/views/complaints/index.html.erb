<div>
  <div class="py-lg-8">
    <h2><%= @building&.name %> Complaint (<%= @complaints.try(:total_count) %>)</h2>
  </div>

  <div class="card">
    <div class="d-flex border-0 p-6">
      <div class="me-auto">
        <%= form_with url: building_complaints_path(@building), method: :get, local: true do %>
          <div class="d-flex flex-wrap gap-2">
            <div class="search-container">
              <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
            </div>
            <div class="filter-container">
              <%= select_tag :state, options_for_select(Complaints::ComplaintDecorator.states_select, params[:state]), class: "form-select" %>
            </div>
            <div class="button-container">
              <%= submit_tag "Filter", class: "btn btn-primary w-100" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <div>
        <table class="table align-middle table-row-dashed gy-3">
          <thead>
          <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
            <th>Complaint ID</th>
            <th class="d-none d-sm-table-cell">Problem ID</th>
            <th>Filed Date</th>
            <th>Description</th>
            <th>Status</th>
            <th class="d-none d-md-table-cell">Severity</th>
            <th class="d-none d-md-table-cell">Resolved Date</th>
            <th class="d-none d-md-table-cell">Attachments</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @complaints.each do |complaint| %>
            <tr>
              <td><%= complaint.complaint_id %></td>
              <td class="d-none d-sm-table-cell"><%= complaint&.problem_id %></td>
              <td><%= complaint&.filed_date&.strftime("%D") %></td>
              <td><%= complaint&.description&.[](0..120) %></td>
              <td><%= complaint&.state %></td>
              <td class="d-none d-md-table-cell"><%= complaint&.severity %></td>
              <td class="d-none d-md-table-cell"><%= complaint&.resolved_date&.strftime("%D") %></td>
              <td class="d-none d-md-table-cell">
                <% complaint&.attachments.each do |attachment| %>
                  <a href="<%= url_for(attachment) %>" download title="<%= attachment.filename.to_s %>">
                    <i class="<%= file_icon_class(attachment) %>"></i>
                  </a>
                <% end %>
              </td>
              <td class="text-end d-none d-lg-table-cell">
                <div class="dropdown">
                  <button class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown">Actions</button>
                  <div class="dropdown-menu">
                    <% if can?(:read, complaint.object) %>
                      <%= link_to 'View Details', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#complaintModal#{complaint.id}" } %>
                    <% end %>
                    <% if can?(:edit, complaint.object) %>
                      <%= link_to 'Edit', '#', class: 'dropdown-item', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{complaint.id}" } %>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
            <%= render 'edit', complaint: complaint %>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @complaints, theme: 'bootstrap4' %>
      </div>
    </div>
  </div>

  <% @complaints.each do |complaint| %>
    <div class="modal fade" id="complaintModal<%= complaint.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="fw-bold">Complaint Details</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body py-10 px-lg-17">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Complaint ID:</strong> <%= complaint.complaint_id %></p>
                <p><strong>Description:</strong> <%= simple_format(complaint.description) %></p>
                <p><strong>Status:</strong> <%= complaint.state %></p>
                <p><strong>Category:</strong> <%= complaint.category_code %></p>
                <p><strong>Severity:</strong> <%= complaint.severity %></p>
                <p><strong>Filed Date:</strong> <%= complaint.filed_date&.strftime("%D") %></p>
                <p><strong>Inspection Date:</strong> <%= complaint.inspection_date&.strftime("%D") %></p>
                <p><strong>Disposition:</strong> <%= complaint.disposition_code %></p>
                <p><strong>Updated On:</strong> <%= complaint.updated_at&.strftime("%D") %></p>
              </div>
              <div class="col-md-6">
                <h5>Attachments</h5>
                <ul class="list-group">
                  <% complaint.attachments.each do |attachment| %>
                    <li>
                      <%= link_to attachment.filename.to_s, rails_blob_path(attachment, disposition: 'attachment'), target: '_blank' %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
            <!-- Comments Section -->
            <% if complaint.audits.any? { |audit| audit.comment.present? } %>
              <div class="row">
                <hr>
                <div class="col-lg-12">
                  <h5>Comments</h5>
                  <% complaint.audits.includes(:user).each do |audit| %>
                    <% if audit.comment.present? %>
                      <div>
                        <i><%= "#{audit.user.first_name}:" %></i> <%= audit.comment %>
                        <span class="text-muted">(<%= time_ago_in_words(audit.created_at) %> ago)</span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
