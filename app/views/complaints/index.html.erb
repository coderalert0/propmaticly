<div>
  <div class="py-lg-8">
    <h2><%= @building&.name %> Complaint List (<%= @complaints.try(:total_count) %>)</h2>
  </div>

  <div class="card">
    <div class="d-flex border-0 p-6">
      <div class="me-auto">
        <%= form_with url: building_complaints_path(@building), method: :get, local: true do %>
          <div class="d-flex">
            <div class="col-lg-7 me-2">
              <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control me-2" %>
            </div>
            <div class="col-lg-4 me-2">
              <%= select_tag :state, options_for_select(Complaints::ComplaintDecorator.states_select, params[:state]), class: "form-select me-2" %>
            </div>
            <div class="col-lg-2">
              <%= submit_tag "Filter", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <table class="table align-middle table-row-dashed gy-3">
        <thead>
        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
          <th class="min-w-100px">Complaint ID</th>
          <th class="min-w-100px">Filed Date</th>
          <th class="min-w-200px">Description</th>
          <th class="min-w-100px">Status</th>
          <th class="min-w-100px">Severity</th>
          <th class="min-w-100px">Resolved Date</th>
        </tr>
        </thead>
        <tbody>
        <% @complaints.each do |complaint| %>
          <tr>
            <td><%= complaint.complaint_id %></td>
            <td><%= complaint&.filed_date&.strftime("%D") %></td>
            <td><%= complaint&.description&.[](0..120) %></td>
            <td><%= complaint&.state %></td>
            <td><%= complaint&.severity %></td>
            <td><%= complaint&.resolved_date&.strftime("%D") %></td>
            <td class="text-end">
              <div class="dropdown">
                <div class="btn btn-sm btn-light dropdown-toggle">
                  Actions
                </div>
                <div class="dropdown-menu">
                  <% if can?(:view, complaint.object) %>
                    <div class="dropdown-item">
                      <%= link_to 'View', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#complaintModal#{complaint.id}" } %>
                    </div>
                  <% end %>
                  <% if can?(:edit, complaint.object) %>
                    <div class="dropdown-item">
                      <%= link_to 'Edit', '#', class: 'menu-link px-3', data: { controller: 'modal', action: 'modal#open', bs_target: "#editModal#{complaint.id}" } %>
                    </div>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
          <%= render 'edit', complaint: complaint %>
        <% end %>
        </tbody>
      </table>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @complaints, theme: 'bootstrap4' %>
      </div>
    </div>
  </div>

  <% @complaints.each do |complaint| %>
    <div class="modal fade" id="complaintModal<%= complaint.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="fw-bold">Complaint Details</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body py-10 px-lg-17">
            <div>
              <p><strong>Complaint ID:</strong> <%= complaint.complaint_id %></p>
              <p><strong>Description:</strong> <%= simple_format(complaint.description) %></p>
              <p><strong>Status:</strong> <%= complaint.state %></p>
              <p><strong>Category:</strong> <%= complaint.category_code %></p>
              <p><strong>Severity:</strong> <%= complaint.severity %></p>
              <p><strong>Filed Date:</strong> <%= complaint.filed_date&.strftime("%D") %></p>
              <p><strong>Inspection Date:</strong> <%= complaint.inspection_date&.strftime("%D") %></p>
              <p><strong>Disposition:</strong> <%= complaint.disposition_code %></p>
              <p><strong>Disposition Date:</strong> <%= complaint.disposition_date&.strftime("%D") if complaint.disposition_date %></p>
              <p><strong>Updated On:</strong> <%= complaint.updated_at&.strftime("%D") %></p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
